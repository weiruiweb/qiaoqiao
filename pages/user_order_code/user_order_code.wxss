/**index.wxss**/

@import "../../wxParse/wxParse.wxss"; 
page{
	width:100%;
	min-height:100%;
	background:#f7f7f7;
}
.product{
	border-bottom:solid 1px #e0e0e0;
}
.product_box{
	height:230rpx;
	border-bottom:solid 1px #e0e0e0;
}
.product_detail{
	width:100%;
	height:140rpx;
}
.product_left{
	width:27.5%;
	height:156rpx;
}
.product_left image{
	width:156rpx;
	height:156rpx;
}
.product_right{
	width:72.5%;
	height:156rpx;
}
.order_handle{
	width:100%;
	height:118rpx;
	border-top:solid 1px #e0e0e0;
}
.product_number{
	width:50%;
}
.product_price{
	width:50%;
	text-align:right;
}
.test{
	height:100%;
	display:flex;
	flex-flow: row wrap;
	align-content:space-between;
}
.product_top{
	height:40%;
}
.submit_info{
	width:166rpx;
	height:60rpx;
	line-height:60rpx;
	margin:24rpx 20rpx;
	float:right;
	border:solid 1px #aeaeae;
	font-size:28rpx;
}
.order_tlt{
	height:78rpx;
	border-bottom:solid 1px #e0e0e0;
}
.tlt_left{
	width:50%;
	overflow:hidden;
	font-size:26rpx;
}
.tlt_right{
	text-align:right;
}
.order_code{
	background: #fff;
	border-bottom: solid 1px #e0e0e0;
}
.order_code .code_tlt{
	width:20%;
	
}
.order_code input{
	width:50%;
	padding:0 2%;
}
.code_btn{
	width:28%;
}
.user_img{
	width:140rpx;
	height:140rpx;
	border-radius:50%;
	overflow:hidden;
	margin:0px auto;
}
.getUser{
	width:100%;
	height:160rpx;
}
.user_left{
	width:32%;
	text-align: center;
}
.user_left .user_img{
	width:100rpx;
	height:100rpx;
	overflow: hidden;
	border-radius:50%;
	margin:0 auto;
}
.user_right{
	width:78%;
}
.user_left image{
	width:100%;
	height:100%;
}