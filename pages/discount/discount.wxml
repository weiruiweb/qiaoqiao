<!--userPoster.wxml-->
<wxs module="func" src="../../utils/func.wxs" />
<view class="w710">
  <view class="recommend flexRowBetween">
  	  <block wx:for="{{web_mainData}}" wx:key="id">
	      <view class="recommend_left" data-id="{{item.id}}" data-type="{{item.type}}" data-deadline="{{item.deadline}}" bindtap="addOrder">
	      	<view class="discount_cont">
	      		<image src="{{item.mainImg[0].url}}" class="discount_img"></image>
				<view class="discount flex">
					<view class="discount_detail">
						<view class="discount_top flex">
							<view class="discount_left">
								<text class="font22">¥</text>{{item.discount}}
							</view>
							<view class="discount_right">
								<view class="detail1 font32">元优惠券</view>
								<view class="detail2 font24">{{item.description}}</view>
							</view>
						</view>
						<view class="discount_bottom">
							<view class="discount_time font22 discount_bg1">活动日期{{item.create_time}}-{{func.timestampToTime(item.deadline)}}</view>
						</view>
					</view>
				</view>
	      	</view>
	      </view>
      </block>
  </view>
</view>